#!/bin/csh -f

#
# Example mospy startup script.
# 
#  Unless you're at caltech you will need to change the environmental variables
#

source /usr/stsci/envconfig.mac/cshrc
iraf

setenv MOSPATH /Users/npk/dropbox/mosfire/code/
setenv PYTHONPATH ${PYTHONPATH}:${MOSPATH}

if ($#argv == 0) then
	echo "Starting MOSFIRE Python"
	\ipython -pylab -colors Linux
else
	switch ( $argv[1] )
		case "libs":
			python -c "import sys; print sys.path"
			breaksw
		case "what":
			\python ${MOSPATH}/apps/what.py $*
			breaksw
        case "db":
            \python ${MOSPATH}/apps/db.py $*
            breaksw
		default:
			\python $*
			breaksw
	endsw
endif

onintr -
